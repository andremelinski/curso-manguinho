{
   "compilerOptions": {
      "emitDecoratorMetadata": true,
	  "experimentalDecorators": true,
      "target": "es2020",
      "module": "commonjs",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      // "strict": true,
      "skipLibCheck": true,
      "allowJs": true,
      "noImplicitAny": true,
      "resolveJsonModule": true,
      "outDir": "./dist",
      "rootDir": "./src"
   },
   "include": [
      "src/**/*.ts",
   ]
}